#input-container
  margin-bottom 21px
  width 100%
  textarea
    width 100%
    padding 5px
    appearance none
    resize vertical
    border 2px solid #000
    margin 0
    min-height 35px
  > button
    width 100%
    font-size 21px
    background #26ff00
    border 2px solid #000
    border-top none
    cursor pointer
    padding-bottom 2px
    margin 0
    &:hover
      text-decoration underline
    &:active
      background-color #000
      color #fff
