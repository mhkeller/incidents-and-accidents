#tree-container
  .node
    cursor pointer
    user-select none
    circle
      fill #ccc
      stroke #ccc
      stroke-width 0
    text
      font 14px sans-serif
      fill #ccc
      text-shadow 2px 2px 2px #fff, -3px -3px 2px #fff, -3px 0 2px #fff, 0 -3px 2px #fff
    &.active
      circle
        fill #fff
        stroke #000
        stroke-width 2px
      text
        fill #000

  .link
    fill none
    stroke #ccc
    stroke-width 1.5px

